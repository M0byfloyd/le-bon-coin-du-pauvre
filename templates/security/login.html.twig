{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <form method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal">Connectez le pauvre qui est en vous</h1>
            <div class="col-xs-12 mb-3 ">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
            </div>
            <div class="col-xs-12 mb-3 ">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="col-xs-12 mb-3 ">

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> J'suis tellement pauvrre que j'ai la flemme de
                        réécrire mon mdp à l'avenir (Remember me)
                    </label>
                </div>
                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion vers les internets
                </button>
            </div>
        </form>
        <a class="justify-center" href="{{ path('lbcdp_signin') }}"
            title="Ne t'inquiète pas Billy, on va t'aider !">J'suis là mais j'ai pas de compte en fait</a>
    </div>
</div>

{% endblock %}