{% extends 'base.html.twig' %}

{% block title %}Hello AdController!{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1 class="col-xs-12">Liste des annonces</h1>

        {% for ad in ads %}
        <div class=" col-xs-12 col-md-4" style="margin: 20px 0;">
            <div class="card">

                <div class="card-body">

                    <article>
                        <h5 class="card-title">{{ ad.title }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Votes : {{ ad.votes }}</h6>
                        <a class="btn btn-secondary" href="{{ path('lbcdp_ad_show',{slug: ad.slug}) }}">Voir
                            l'annonce</a>
                    </article>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>
</div>
{% endblock %}